<section class="multi-slider">
  <div
    class="swiper mySwiper"
    data-time={{section.settings.time-auto-id}}
    enable-auto={{section.settings.enable-auto-id}}>
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'banner' %}
          <div class="swiper-slide">
            <img
              class="img-banner"
              src="{{ block.settings.img-banner-id | img_url: 'master' }}"
              alt="">
            <div class="button-banner">
              {{ block.settings.banner-content-id }}
            </div>
          </div>
      {% else %}
        {% endcase %}
      {% endfor %}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
  </div>
</section>
{% schema %}
  {
    "name": "Slide Banner",
    "class": "section",
    "settings": [
      {
        "type": "number",
        "label": "Time Auto Play",
        "id": "time-auto-id"
      }, {
        "type": "checkbox",
        "label": "Enable Auto Play",
        "id": "enable-auto-id"
      }
    ],
    "blocks": [
      {
        "type": "banner",
        "name": "Banner Content",
        "settings": [
          {
            "type": "text",
            "label": "Banner Content",
            "id": "banner-content-id"
          }, {
            "type": "image_picker",
            "label": "image pick",
            "id": "img-banner-id"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slider Blocks"
      }
    ]
  }
{% endschema %}
<style>
  html,
  body {
    position: relative;
    height: 100%;
  }

  body {
    background: #eee;
    font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
    font-size: 14px;
    color: #000;
    margin: 0;
    padding: 0;
  }

  .swiper {
    width: 100%;
    height: 100%;
  }

  .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .swiper-slide img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  .button-banner {
    possition: absolute !important;
    bottom: 10px;
    left: 10px;
  }
</style>